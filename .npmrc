# NPM Registry Configuration
registry=https://registry.npmjs.org/

# Fallback registry
@types:registry=https://registry.npmjs.org/

# Retry configuration
fetch-retries=10
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=180000

# Network timeout
timeout=120000

# Strict SSL
strict-ssl=false

# Additional network settings
maxsockets=50
maxsockets-per-host=10

# Cache settings
cache-min=3600
prefer-offline=true
