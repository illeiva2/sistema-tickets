# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - SISTEMA DE TICKETS
# ===========================================
# 
# ⚠️  IMPORTANTE: 
# - Cambia TODOS los valores por defecto
# - Usa secretos fuertes y únicos
# - No commitees este archivo con valores reales
# - Usa un gestor de secretos en producción

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/tickets_production"

# ===========================================
# AUTENTICACIÓN JWT
# ===========================================
# Genera un secreto fuerte: openssl rand -base64 64
JWT_SECRET="your-super-secure-jwt-secret-here-change-this"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# SERVIDOR
# ===========================================
PORT=3001
NODE_ENV="production"

# ===========================================
# ARCHIVOS Y UPLOADS
# ===========================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# ===========================================
# EMAIL (OPCIONAL)
# ===========================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"

# ===========================================
# SEGURIDAD
# ===========================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ===========================================
# OAUTH GOOGLE (OPCIONAL)
# ===========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://yourdomain.com/api/auth/google/callback"

# ===========================================
# REDIS (OPCIONAL - PARA CACHE)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# MONITOREO (OPCIONAL)
# ===========================================
# Para integración con servicios de monitoreo
# SENTRY_DSN="your-sentry-dsn"
# NEW_RELIC_LICENSE_KEY="your-newrelic-key"
