{
  "name": "@forzani/api",
  "version": "1.0.0",
  "description": "API backend para el sistema de tickets",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "prisma generate",
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc && npm run build:api",
    "build:api": "node scripts/build-api.js",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.13",
    "@types/nodemailer": "^7.0.1",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^157.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0-rc.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-lib": "^1.17.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prisma": "^6.15.0",
    "sharp": "^0.34.3",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0"
  }
}
