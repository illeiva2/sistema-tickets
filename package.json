{
  "name": "forzani-tickets",
  "version": "1.0.0",
  "description": "Sistema de gestiÃ³n de tickets (Help Desk) con monorepo Turborepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "seed": "turbo run seed",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "packages:build": "pnpm --filter @forzani/types build && pnpm --filter @forzani/ui build",
    "setup:db": "pnpm --filter @forzani/api db:generate && pnpm --filter @forzani/api db:migrate && pnpm --filter @forzani/api db:seed",
    "dev:api": "pnpm --filter @forzani/api dev",
    "dev:web": "pnpm --filter @forzani/web dev",
    "stack:up": "cd infra/docker && docker compose up -d",
    "stack:down": "cd infra/docker && docker compose down",
    "stack:rebuild": "cd infra/docker && docker compose up -d --build",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.12.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "docker-compose": "^1.2.0"
  }
}
