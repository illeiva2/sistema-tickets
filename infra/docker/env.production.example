# Configuración de producción para servidor local
NODE_ENV=production

# Base de datos
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@localhost:5432/empresa_tickets

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=CHANGE_ME_TO_VERY_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Servidor
PORT=3001
HOST=0.0.0.0

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# OAuth Google (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Email (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@empresa.com

# Seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optimizaciones Node.js
NODE_OPTIONS=--max-old-space-size=1024 --max-semi-space-size=128
